            <div class="row">
                <div id="graph" class="col-md-4 col-md-offset-3">
                </div>
            </div>

            <div class="row">
                <div id="newcustomers" class="col-md-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3>New Customers</h3>
                        </div>
                        <ul class="list-group">
                            <a id="new-daily" class="list-group-item">
                                Today
